<div class="index">
    <h1>Books</h1>
    <span>Title</span>
    <span>Body<br></span>
    <% @books.each do |book| %>
        <span><%= book.title %></span>
        <span><%= book.body %></span>
        <span>
            <%= link_to "show", "/books/#{book.id}" %>
        </span>
        <span>
            <%= link_to "edit", edit_book_path(book.id) %>
        </span>
        <span>
            <%= link_to "destroy" ,destroy_book_path(book.id), method: :delete, "data-confirm"=>"本当に削除しますか?" %>
        </span>

        <br>
    <% end %>
</div>
<div class="new">
  <h1>New book</h1>
  <%= form_with model: @book do |f| %>
    <h4>title</h4>
    <%= f.text_field :title %>
    <h4>body</h4>
    <%= f.text_area :body %>
    <br>
    <%= f.submit "Create Book" %>
  <% end %>
</div>
